{{!< default}}
      <!-- CONTENT -->
      <article>

        <!-- TITLE BOX -->
        <section class="title-box">
          <span class="tags">
            <ul>
              {{#each post.tags}}
                <li><a href="/tags/{{this.key}}">{{this.name}}</a></li>
              {{/each}}
            </ul>
          </span>
          <h1>{{post.title}}</h1>
          <h2>{{post.subHead}}</h2>
          {{#with post.author}}
          <div class="byline">
            By <a href="/u/{{userName}}">{{name.full}}</a> &nbsp; | &nbsp;
            <a href="https://twitter.com/{{twitterUsername}}" target="_blank">@{{twitterUsername}}</a> &nbsp; | &nbsp;
          {{/with}}
            Last Updated: {{post.updatedAtFormatted}}
            {{#if post.category}}
            <br />Posted In: <a href="/categories/{{post.category.key}}">{{post.category.name}}</a>
            {{/if}}
          </div>
        </section>
        <!-- /TITLE BOX -->

        {{#if post.videoURL}}
          <!-- INTRO VIDEO -->
          <section class="intro-image">
            <div class="embed-container">
              <iframe src="{{post.videoURL}}" frameborder="0" allowfullscreen></iframe>
            </div>
          </section>
          <!-- /INTRO VIDEO -->
        {{/if}}

        {{#unless post.videoURL}}
          <!-- INTRO IMAGE -->
          <section class="intro-image">
            <img src="https://res.cloudinary.com/closebrace/image/upload/w_720/v{{post.mainImage.version}}/{{post.mainImage.public_id}}.{{post.mainImage.format}}" alt="Main Content Image" />
          </section>
          <!-- /INTRO IMAGE -->
        {{/unless}}

        <!-- TUTORIAL INFO -->
        <section class="tutorial-info">
          {{{post.tutorialInfo.html}}}
        </section>
        <!-- /TUTORIAL INFO -->

        <!-- ARTICLE TEXT -->
        <section class="article-text">
          {{{post.content.html}}}
        </section>
        <!-- /ARTICLE TEXT -->
<section class="comments">
        <h3> New Comments</h3>
        <div id="newComments">
        </div>
</section>

        {{> comments }}

      </article>
      <!-- /CONTENT -->

      <!-- SIDEBAR -->
      <aside>
        {{> sidebar_newsletter }}
        {{> sidebar_ad_vertical }}
        {{> sidebar_twitter }}
      </aside>
      <!-- /SIDEBAR -->


<script>
document.addEventListener("DOMContentLoaded", function() {

  // We need a couple of things passed from handlebars
  const cbUser = {{#if user}}'{{user.id}}'{{else}}''{{/if}};
  const cbIsVerified = {{#if user.isVerified}}true{{else}}false{{/if}};
  const cbIsAdmin = {{#if user.isAdmin}}true{{else}}false{{/if}};

  getArticleComments('{{post.id}}', cbUser, cbIsVerified, cbIsAdmin);

});
</script>