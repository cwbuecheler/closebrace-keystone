{{!< default}}

      <!-- CONTENT -->
      <article>

        <!-- TITLE BOX -->
        <section class="title-box">
          <h1>Articles in "{{categoryName}}"</h1>
        </section>
        <!-- /TITLE BOX -->

        {{#unless firstPost}}
          <p>
            Sorry, no Articles found with that category.
          </p>
        {{else}}
          <!-- LATEST POST -->
          <div class="feature">
            <div class="top-border"></div>
            <div class="image-box">
              <a href="/{{toLowerCase firstPost.postType}}s/{{firstPost.slug}}" class="image-link"><img src="https://res.cloudinary.com/closebrace/image/upload/w_555/v{{firstPost.mainImage.version}}/{{firstPost.mainImage.public_id}}.{{firstPost.mainImage.format}}" alt="Main Content Image Thumbnail" /></a>
              <span class="feature-type">Latest {{firstPost.postType}}</span>
              <div class="text-box">
                <h1><a href="/{{toLowerCase firstPost.postType}}s/{{firstPost.slug}}">{{firstPost.title}}</a></h1>
                <p>
                  {{firstPost.subHead}}
                </p>
              </div>
            </div>
          </div>
          <!-- /LATEST POST -->

          <!-- POST TABLE -->
          <table class="table table-posts">
            <tbody>
            {{#each posts}}
              <tr>
                <td class="shot hide-mobile"><a href="/articles/{{this.slug}}"><img src="https://res.cloudinary.com/closebrace/image/upload/h_50/v{{this.mainImage.version}}/{{this.mainImage.public_id}}.{{this.mainImage.format}}" alt="Main Content Image Thumbnail" /></a></td>
                <td class="info">
                  <p>
                    <a href="/articles/{{this.slug}}">{{this.title}}</a> | {{this.updatedAtFormatted}}<br />
                    <em>{{this.subHead}}</em>
                  </p>
                </td>
                <td class="hide-above-mobile">
                  <a href="/articles/{{this.slug}}" class="btn btn-primary">Read</a>
                </td>
              </tr>
            {{/each}}

            </tbody>
          </table>
          <!-- /POST TABLE -->
        {{/unless}}

      </article>
      <!-- /CONTENT -->

      <!-- SIDEBAR -->
      <aside>
        {{> sidebar_newsletter }}
        {{> sidebar_ad_vertical }}
        {{> sidebar_twitter }}
      </aside>
      <!-- /SIDEBAR -->